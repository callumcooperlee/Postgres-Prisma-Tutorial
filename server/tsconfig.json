{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src/index.ts", "prisma/**/*.ts"]
}

